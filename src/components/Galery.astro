<style>
    	.h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
        padding: 25px;
		text-align: center;
		margin-bottom: 1em;
	    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

        
        @media screen and (min-width: 240px and max-width: 600px) {
            .h1{
            font-size: 2.3rem;
		    font-weight: 700;
            padding: 25px;
		    line-height: 1;
		    text-align: center;
		    margin-bottom: 1em;
            }
            
        }
</style>